<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KueflerBioApp.SkillDetailPage">
    <ContentPage.Content>
        <StackLayout Padding="20"
                     Spacing="10">

            <Image x:Name="skillImage" 
                   WidthRequest="100"
                   HeightRequest="100"/>

            <Label x:Name="skillNameLabel"/>

            <Label x:Name="skillDescriptionLabel"/>

            <Label x:Name="skillTypeLabel"/>

            <Label x:Name="skillAlertnateNameLabel"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>